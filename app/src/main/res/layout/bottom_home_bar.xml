<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/def_home_vote_btn_pressed"
            android:id="@+id/btn_home_vote"
            android:text="@string/btn_start_vote"
            android:textColor="@color/white"
            android:maxLines="2"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bottom_layout"
            android:background="@color/colorToolbar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_hand_left"
                android:layout_marginRight="120dp"
                android:rotation="20"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_hand_right"
                android:layout_alignParentLeft="true"
                android:rotation="-20"
                android:layout_marginLeft="120dp"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>