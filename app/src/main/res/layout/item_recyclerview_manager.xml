<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:id="@+id/item_recyclerview_manager"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_home_recyclerview_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_list_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="6.5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/img_manager_rec_state"
            android:layout_gravity="top"/>

        <LinearLayout
            android:layout_width="263.5dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="left"
                android:maxEms="12"
                android:id="@+id/txt_manager_rec_title"
                android:maxLines="1"
                android:singleLine="true"
                android:text="12312312312312312313213123123123"
                android:textSize="@dimen/text_home_large"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt_manager_rec_description"
                android:ellipsize="end"
                android:maxEms="26"
                android:maxLines="2"
                android:singleLine="true"
                android:text="123123123123123123123"
                android:textColor="@color/homeRecyclerSmallText"
                android:textSize="@dimen/text_home_small"/>
        </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="42.5dp"
                android:id="@+id/img_manager_rec_time_state"
                android:layout_gravity="center"
                android:layout_marginRight="5.5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_layout"
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:weightSum="3"
        android:background="@color/homeRecyclerSmallText"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_height="20.5dp"
            android:text="@string/btn_home_menu_edit"
            android:id="@+id/btn_menu_edit"
            android:layout_marginLeft="38dp"
            android:background="@drawable/def_btn_home_menu"
            android:layout_marginRight="56dp"/>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_menu_checked"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="@string/btn_home_menu_check"
            android:background="@drawable/def_btn_home_menu"
            android:layout_height="20.5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_menu_deleted"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/def_btn_home_menu"
            android:layout_height="20.5dp"
            android:layout_marginLeft="56dp"
            android:text="@string/btn_home_menu_delete"
            android:layout_marginRight="38dp"/>
    </LinearLayout>

</LinearLayout>