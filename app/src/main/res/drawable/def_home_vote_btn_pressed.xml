<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_checked="false" android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">
            <solid android:color="@color/colorHomeBtnUnselected"/>
            <stroke android:width="3dp" android:color="@color/white"/>
        </shape>
    </item>
<item android:state_selected="true" android:state_pressed="true" android:state_checked="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
           android:shape="oval">
        <solid android:color="@color/colorHomeBtnSelected"/>
        <stroke android:width="3dp" android:color="@color/white"/>
        <corners android:radius="360dip"/>
    </shape>
</item>

</selector>
